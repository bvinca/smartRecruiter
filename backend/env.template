# Database Configuration
# Option 1: Docker (recommended - use this if running docker-compose)
DATABASE_URL=postgresql://smartrecruiter:smartrecruiter@localhost:5432/smartrecruiter

# Option 2: Local PostgreSQL
# DATABASE_URL=postgresql://smartrecruiter:smartrecruiter@localhost:5432/smartrecruiter

# Option 3: Cloud PostgreSQL (Supabase, Neon, etc.)
# DATABASE_URL=postgresql://user:password@host:5432/database

# OpenAI API Key
# Get yours at: https://platform.openai.com/api-keys
# Leave empty if you don't want AI features (app will still work)
OPENAI_API_KEY=

# Model Selection (optional - defaults to "auto")
# Options: "openai", "huggingface", or "auto"
# "auto" uses HuggingFace if OPENAI_API_KEY is not set, otherwise uses OpenAI
EMBEDDING_MODEL=auto
SUMMARIZATION_MODEL=auto
QUESTION_GENERATION_MODEL=auto

# HuggingFace Model Names (optional - uses defaults if not set)
# Embeddings: sentence-transformers/all-MiniLM-L6-v2 (384 dimensions)
# Summarization: facebook/bart-large-cnn
# Question Generation: t5-small
HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
HUGGINGFACE_SUMMARIZATION_MODEL=facebook/bart-large-cnn
HUGGINGFACE_QUESTION_MODEL=t5-small

# Application Settings
# Generate a random secret key: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./chroma_db

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

